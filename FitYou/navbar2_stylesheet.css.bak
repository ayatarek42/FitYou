@import url('https://fonts.googleapis.com/css?family=Work+Sans:400,600');
body {
	margin: 0;
	font-family: 'Work Sans', sans-serif;
	font-weight: 600;
}

.container {
	width: 80%;
	margin: 0 auto;
}

#logo{
width: 50px;
height:50 px;

}


header {
 
   background-color:#f1c7b2;
}

header::after {
  content: '';
  display: table;
  clear: both;
}

nav {
  top: 10px;
  position: absolute;
  float: right;
}

nav ul {
  margin: 0;
  padding: 0;
  list-style: none;
}

nav li {
  display: inline-flex;
  margin-left: 70px;
  padding-top: 23px;
  position: relative;
}

nav a {
  color: #444;
  text-decoration: none;
  text-transform: uppercase;
  font-size: 14px;
}

nav a:hover {
  color: #000;
}

nav a::before {
  content: '';
  display: block;
  height: 5px;
  background-color: #444;
  position: absolute;
  top: 0;
  width: 0%;
  transition: all ease-in-out 250ms;
}

nav a:hover::before {
  width: 100%;
}

.dropdown {
  position: relative;
  display: inline-block;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color:#fdf0e8;
  width:125px;
  overflow-y:scroll;
  overflow-x:hidden;
  height:100px;
  
}

.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
}

.dropdown-content a:hover {background-color: #fcfaef;}

.dropdown:hover .dropdown-content {display: block;}



#searchInput {
    height: 25px;
    padding: 10px;
	border:none;
    border-radius:5px 0px 0px 5px ;	
}
#searchButton{
  float: right;
  background: #fcfaef;
